<%% content_for :title do %>
  <%%= "Spree #{Spree.t('administration')}: " %>
  <%%= I18n.t("activerecord.models.spree/<%=singular_name%>") %>
<%% end %>

<%% content_for :page_title do %>
  <%%= "#{Spree.t('scaffold.edit')} #{I18n.t("activerecord.models.spree/<%=singular_name%>")}" %>
<%% end %>

<%% content_for :page_actions do %>
  <%%= link_to_with_icon('delete', 'delete', object_url(@object), class: "btn btn-warning delete-resource", data: { confirm: Spree.t(:are_you_sure), action: 'remove' }) %>
  <%%= button_link_to(Spree.t("scaffold.print"), object_url(@object, :pdf), :icon => 'print', :target => "_blank", :class => "btn btn-primary") %>
  <%%= button_link_to Spree.t("scaffold.back_to_resources_list"), collection_url, :icon => 'arrow-left' %>
<%% end %>

<div data-hook="admin_<%= singular_name %>_edit_form_header">
  <%%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @<%= singular_name %> } %>
</div>

<div data-hook="admin_<%= singular_name %>_edit_form">
  <%%= form_for [:admin, @<%= singular_name %>] do |f| %>
  <fieldset>
        <%%= render 'form', f: f %>
        <%%= render 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
  <%% end %>
</div>
