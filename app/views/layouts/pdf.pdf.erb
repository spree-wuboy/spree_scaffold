<!doctype html>
<html>
<head>
  <meta charset='utf-8'/>
  <%= wicked_pdf_stylesheet_link_tag 'pdf' %>
  <%= wicked_pdf_stylesheet_link_tag 'pdf_custom' %>
  <style>
    @font-face {
      font-family: 'WCL';
      font-style: normal;
      font-weight: 300;
      src: url('<%= SpreeScaffold::Engine.root.join('app', 'assets', 'fonts', 'WCL-02.ttf') %>') format('truetype')
    }

    @font-face {
      font-family: "Helvetica";
      src: url('<%= SpreeScaffold::Engine.root.join('app', 'assets', 'fonts', 'Helvetica-Regular.ttf') %>') format('truetype');
    }

    @font-face {
      font-family: "Helvetica";
      src: url('<%= SpreeScaffold::Engine.root.join('app', 'assets', 'fonts', 'Helvetica-Bold.ttf') %>') format('truetype');
      font-weight: 600;
    }

    body {
    <% if I18n.locale == 'zh' %>
      font-family: 'Helvetica', 'WCL';
    <% else %>
      font-family: 'Helvetica';
    <% end %>
    }
  </style>
</head>
<body>
<%= yield %>
</body>
</html>